<%
/**
 * Boilerplate action
 * 
 * This is the template used when creating actions for controllers 
 * generated through the CLI
 * e.g. `sails generate controller foo action`
 *
 */
%>
  /**
   * /<%= entity.toLowerCase() %>/<%= action %>
   */ 
  <%- action %>: function (req,res) {

    // This will render the view: 
    // <%- viewPath %>/<%-entity%>/<%- action %>.<%- viewEngine %>
    res.view();

  }